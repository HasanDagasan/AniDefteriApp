<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:background="#bebebe"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ayarlar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/settings_407111"
            android:textAllCaps="false"
            android:textColor="@color/cardview_shadow_end_color"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ekle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/eklepasif"
            android:textAllCaps="false"
            android:textColor="@color/cardview_shadow_end_color"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ayarlar"
            app:layout_constraintStart_toEndOf="@id/home"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/anasayfa_bos"
            android:textAllCaps="false"
            android:textColor="@color/cardview_shadow_end_color"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/listele"
            app:layout_constraintStart_toEndOf="@+id/ekle"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/favoriler"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/heart_bos"
            android:textAllCaps="false"
            android:textColor="@color/cardview_shadow_end_color"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/listele"
            app:layout_constraintStart_toEndOf="@id/home"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/listele"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/listepasif"
            android:textAllCaps="false"
            android:textColor="@color/cardview_shadow_end_color"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="#dcdcdc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3169252627939778/4684347122"/>
        <!--ads:adUnitId="ca-app-pub-3940256099942544/6300978111"-->



        <Button
            android:id="@+id/kayitbos"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@android:drawable/ic_menu_add"
            android:visibility="invisible" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="603dp"
            android:layout_gravity="center"
            android:background="#dcdcdc"
            android:columnCount="2"
            android:rowCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Button 1 with overlay -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    style="@style/NotButtonStyle" />

                <com.hasandagasan.anidefteri.classes.HeartButton
                    android:id="@+id/kalp1"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="35dp"
                    android:background="@android:color/transparent"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:text="" />

                <ImageView
                    android:id="@+id/hatirlaticiIconMain1"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|start"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="35dp"
                    android:src="@drawable/ic_notification"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </FrameLayout>

            <!-- Button 2 with overlay -->
            <FrameLayout
